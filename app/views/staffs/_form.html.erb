<%= form_with model: staff, local: true, class: 'my-3' do |form| %>
  <% if staff.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <p><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</p>

      <ul>
        <% staff.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :person_id, '身份证号' %>
    <%= form.text_field :person_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name, '姓名' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone, '电话' %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address, '地址' %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, '开始工作日期' %>
    <div class="form-row">
      <div class="col col-4">
        <%= form.date_select :start_date, {date_separator: '</div><div class="col col-4">'}, {class: 'form-control'} %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-check">
      <%= form.check_box :manager %>
      <%= form.label :manager, '经理' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :branch_id, '支行' %>
    <%= form.select :branch_id, options_for_select(Branch.all.map do |branch| %>
      <% [branch.name, branch.id] %>
      <% end), {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :department_id, '部门' %>
    <%= form.select :department_id, options_for_select(Department.all.map do |dept| %>
      <% [dept.name, dept.id] %>
      <% end), {}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
