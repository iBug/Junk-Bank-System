<%= form_with model: account, local: true, id: 'account-form', class: 'my-3' do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :branch_id, '支行' %>
    <%= form.select :branch_id, options_for_select(Branch.all.map do |branch| %>
      <% [branch.name, branch.id] %>
      <% end), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :client_id, '开户客户' %>
    <%= form.select :client_id, options_for_select(Client.all.map do |client| %>
      <% [client.name, client.id] %>
      <% end), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :accountable_type, '账户类型' %>
    <%= form.select :accountable_type, options_for_select(%w[储蓄账户 支票账户].zip %i[DepositAccount CheckAccount]), {}, { class: 'form-control', 'v-model': 'accountType' } %>
  </div>

  <div class="form-group">
    <%= form.label :balance, '余额' %>
    <%= form.number_field :balance, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :open_date, '开户日期' %>
    <div class="form-row">
      <div class="col col-4">
        <%= form.date_select :open_date, { date_separator: '</div><div class="col col-4">' }, { class: 'form-control' } %>
      </div>
    </div>
  </div>

  <div v-if="accountType === 'DepositAccount'">
    <%= form.fields_for :deposit_account, (DepositAccount.new if account.new_record?) do |f| %>
      <div class="form-group">
        <%= f.label :interest_rate, '利率' %>
        <%= f.number_field :interest_rate, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :currency, '货币类型' %>
        <%= f.text_field :currency, class: 'form-control', maxlength: 3, value: f.object.currency.upcase %>
      </div>
    <% end %>
  </div>

  <div v-if="accountType === 'CheckAccount'">
    <%= form.fields_for :check_account, (CheckAccount.new if account.new_record?) do |f| %>
      <div class="form-group">
        <%= f.label :withdraw_amount, '透支额' %>
        <%= f.number_field :withdraw_amount, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>

  <% content_for :body_after do %>
    <script type="text/javascript">
      var app = new Vue({
        el: '#account-form',
        data: {accountType: undefined}
      });
    </script>
  <% end %>
<% end %>
