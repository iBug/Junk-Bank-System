<% content_for :heading do %>
  <h1 class="mb-0">支行</h1>
<% end %>

<% content_for :body do %>
  <table class="table table-hover mb-0">
    <thead>
      <tr>
        <th>支行名称</th>
        <th>城市</th>
        <th>资产</th>
        <th>操作</th>
      </tr>
    </thead>

    <tbody>
      <% @branches.each do |branch| %>
        <tr>
          <td><%= link_to branch.name, branch %></td>
          <td><%= branch.city %></td>
          <td><%= branch.assets %></td>
          <td>
            <%= link_to raw(t'actions.view'), branch, class: 'btn btn-outline-primary' %>
            <%= link_to raw(t'actions.edit'), edit_branch_path(branch), class: 'btn btn-outline-secondary' %>
            <%= link_to raw(t'actions.destroy'), branch, method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% content_for :footer do %>
  <%= link_to '新建支行', new_branch_path, class: 'btn btn-success' %>
<% end %>

<%= render template: 'layouts/listing' %>
