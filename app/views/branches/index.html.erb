<h1>Branches</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Assets</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= link_to branch.name, branch %></td>
        <td><%= branch.city %></td>
        <td><%= branch.assets %></td>
        <td>
          <%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-secondary' %>
          <%= link_to 'Destroy', branch, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Branch', new_branch_path, class: 'btn btn-success' %>
