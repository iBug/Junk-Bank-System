<%= render partial: 'svg_header', locals: { file: 'piggy-bank.svg', text: '储蓄业务' } %>

<%= render partial: 'search_form', locals: { url: current_path } %>

<% if @action %>
  <div class="border rounded bg-white p-3">
    <ul class="nav nav-tabs" id="branches-tabs" role="tablist">
      <% @record_groups.each_with_index do |(branch_id, records), index| %>
        <% p index %>
        <li class="nav-item" role="presentation">
          <a class="nav-link <%= 'active' if index.zero? %>" id="tab-branch-<%= branch_id %>" data-toggle="tab" href="#branch-<%= branch_id %>" role="tab" aria-controls="branch-<%= branch_id %>" aria-selected="<%= index.zero? %>">
            <%= records.first.branch_name %>
          </a>
        </li>
      <% end %>
    </ul>
    <div class="tab-content" id="branches">
      <% @record_groups.each_with_index do |(branch_id, records), index| %>
        <div class="tab-pane fade <%= 'show active' if index.zero? %>" id="branch-<%= branch_id %>" role="tabpanel" aria-labelledby="tab-branch-<%= branch_id %>">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>时间</th>
                <th>业务额</th>
              </tr>
            </thead>

            <tbody>
              <% records.each do |record| %>
                <tr>
                  <% case @time_span %>
                  <% when :year %>
                    <td><%= record.open_year %></td>
                  <% when :quarter %>
                    <td><%= "#{record.open_year} Q#{record.open_quarter}" %></td>
                  <% when :month %>
                    <td><%= "#{record.open_year}-#{'%02i' % record.open_month}" %></td>
                  <% else %>
                    <td><%= record.open_date %></td>
                  <% end %>
                  <td><%= record.total_amount %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
