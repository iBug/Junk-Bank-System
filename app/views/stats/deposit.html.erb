<%= render partial: 'svg_header', locals: { file: 'piggy-bank.svg', text: '储蓄业务' } %>

<%= form_with url: current_path, local: true, method: :get, class: 'card shadow-sm mb-3' do |form| %>
  <div class="card-header">
    <h3 class="mb-0">搜索<h3>
  </div>

  <div class="card-body">
  </div>

  <div class="card-footer">
    <%= form.button class: 'btn btn-success', type: :submit, name: :action, value: :submit do %>
      <i class="fa fas fa-search"></i> 搜索
    <% end %>
    <%= link_to raw(t'actions.back'), :back, class: 'btn btn-secondary' %>
  </div>
<% end %>

<% if @action %>
  <div class="border rounded bg-white p-3">
  </div>
<% end %>
