<%= form_with model: department, local: true, class: 'my-3' do |form| %>
  <%= render partial: 'error_explanation', locals: { model: department } %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :kind %>
    <%= form.text_field :kind, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
