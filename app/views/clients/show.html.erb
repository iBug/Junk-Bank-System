<% content_for :heading do %>
  <h1 class="mb-0">客户 <%= @client.name %></h1>
<% end %>

<% content_for :body do %>
  <dl class="row my-0">
    <% fields_with_name.each do |field, name| %>
      <dt class="col col-12 col-md-2"><%= name %></dt>
      <dd class="col col-12 col-md-10"><%= @client[field] %></dd>
    <% end %>
    <dt class="col col-12 col-md-2">负责人</dt>
    <dd class="col col-12 col-md-10"><%= link_to @client.manager.name, @client.manager %></dd>
    <dt class="col col-12 col-md-2">负责人类型</dt>
    <dd class="col col-12 col-md-10"><%= manager_type_name @client.manager_type %></dd>
    <dt class="col col-12 col-md-2">联系人</dt>
    <dd class="col col-12 col-md-10"><%= link_to @client.contact.name, @client.contact %></dd>
  </dl>
<% end %>

<% content_for :footer do %>
  <%= link_to raw(t'actions.edit'), edit_client_path(@client), class: 'btn btn-primary' %>
  <%= link_to raw(t'actions.back'), clients_path, class: 'btn btn-secondary' %>
  <%= link_to raw(t'actions.destroy'), @client, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
<% end %>

<%= render template: 'layouts/card' %>
